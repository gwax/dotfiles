[user]
    name = George Leslie-Waksman
    email = waksman@gmail.com

[push]
    default = simple

[diff]
    tool = Meld
[difftool]
    prompt = false
[difftool "Meld"]
    cmd = meld "$LOCAL" "$REMOTE"

[merge]
    tool = meld
    conflictstyle = diff3
[mergetool "meld"]
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output="$MERGED"

[pull]
    rebase = true

[core]
    excludesfile = ~/.gitignore_global
