[user]
    name = George Leslie-Waksman
    email = george@manapool.com

[push]
    default = simple
    autoSetupRemote = true

[diff]
    tool = bc
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"
[difftool "vscode"]
    cmd = code --wait --diff "$LOCAL" "$REMOTE"
[difftool "diffpdf"]
    cmd = diff-pdf --view \"$LOCAL\" \"$REMOTE\"

[merge]
    tool = bc
[mergetool "bc"]
    trustExitCode = true
[mergetool "meld"]
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output="$MERGED"
[mergetool "Meld"]
    cmd = Meld "$LOCAL" "$MERGED" "$REMOTE" --output="$MERGED"

[pull]
    rebase = true

[core]
    excludesfile = ~/.gitignore_global
[fetch]
    prune = true
[init]
    defaultBranch = trunk
