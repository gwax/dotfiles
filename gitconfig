[user]
    name = George Leslie-Waksman
    email = waksman@gmail.com

[push]
    default = simple

[diff]
    tool = meld
    colorMoved = zebra
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"
[difftool "vscode"]
    cmd = code --wait --diff "$LOCAL" "$REMOTE"
[difftool "diffpdf"]
    cmd = diff-pdf --view \"$LOCAL\" \"$REMOTE\"

[merge]
    tool = meld
    conflictstyle = diff3
[mergetool "meld"]
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output="$MERGED"
[mergetool "Meld"]
    cmd = Meld "$LOCAL" "$MERGED" "$REMOTE" --output="$MERGED"

[pull]
    rebase = true

[core]
    excludesfile = ~/.gitignore_global
[fetch]
    prune = true
[init]
    defaultBranch = trunk
